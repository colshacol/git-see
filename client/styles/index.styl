@import './utils/vars.styl';
@import './type.styl';

html, body, div, header, footer, nav, aside, section {
  box-sizing: border-box;
}

* {
  margin: 0;
  padding: 0;
}

:root {
  font-family: $primaryFont;
  background: #f2f2f2;
  letter-spacing: 0.5px;
  color: $blue;
}

h1, h2, h3, h4, h5, h6 {
  font-family: $secondaryFont;
}

nav {
  background: #fff;
  height: 50px;
  padding: 0px 24px;
  box-shadow: 0 2px 20px rgba(0,0,0,0.1), 0 1px 0px rgba(0,0,0,0.03);
}

input {
  letter-spacing: 0.5px;
}

input::-webkit-input-placeholder {
  letter-spacing: 0.5;
}

a {
  color: $orange;
  cursor: pointer;
}
